# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Code files
[*.{js,jsx,ts,tsx,json,css,scss,html,xml,yml,yaml,md}]
indent_style = space
indent_size = 2

# Configuration files
[*.{config.js,config.ts}]
indent_style = space
indent_size = 2

# Package files
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
